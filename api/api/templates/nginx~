server {{
     listen   80; ## listen for ipv4; this line is default and implied

     root {0};
     index index.html index.htm;

     server_name {1}.ares.sangm.net;

     location / {{
        try_files $uri $uri/ /index.html;
     }}

     location /doc/ {{
     alias /usr/share/doc/;
         autoindex on;
         allow 127.0.0.1;
         allow ::1;
         deny all;
     }}
         error_page 404 /404.html;
}}